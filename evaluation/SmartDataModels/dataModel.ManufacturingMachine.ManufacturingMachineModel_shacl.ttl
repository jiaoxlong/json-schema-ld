@prefix dash: <http://datashapes.org/dash#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix schema: <https://schema.org/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix dcterms: <http://purl.org/dc/terms/>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix gbfs: <https://w3id.org/gbfs#>.
@prefix geo: <http://www.w3.org/2003/01/geo/wgs84_pos#>.
@prefix mobivoc: <http://schema.mobivoc.org/#>.
@prefix sdm: <https://w3id.org/sdm#>.
@prefix sdmshape: <https://w3id.org/sdm/shapes/schema.json#>.

<https://w3id.org/sdm/shapes/schema.json#schema.jsonShape> rdf:type sh:NodeShape;
    sh:targetClass <https://smart-data-models.github.io/dataModel.ManufacturingMachine/ManufacturingMachineModel/schema.json>;
    sh:property [
  sh:path sdm:type;
  sh:description "Property. NGSI Entity identifier. It has to be ManufacturingMachineModel";
  sh:name "type";
  sh:in (sdm:ManufacturingMachineModel);
  sh:minCount 1;
  sh:maxCount 1
], [
  sh:path sdm:documentation;
  sh:description "Property. Reference to data sheet or other manufacturerâ€™s documentation about this MachineModel.";
  sh:name "documentation";
  sh:datatype xsd:string
], [
  sh:path sdm:manufacturerName;
  sh:description "Property. The name of manufacturer of this MachineModel.";
  sh:name "manufacturerName";
  sh:datatype xsd:string
], [
  sh:path sdm:brandName;
  sh:description "Property. The brand name of this MachineModel.";
  sh:name "brandName";
  sh:datatype xsd:string
], [
  sh:path sdm:manufacturingMachineType;
  sh:name "manufacturingMachineType";
  sh:in (sdm:2dPrinter sdm:3dPrinter sdm:3dScanner sdm:cnc sdm:dryer sdm:fan sdm:grindingMachine sdm:injectionMolding sdm:kiln sdm:laserCutter sdm:lathe sdm:millingMachine sdm:mixer sdm:oven sdm:packaging sdm:robot sdm:saw sdm:stampingMachine)
], [
  sh:path sdm:version;
  sh:description "Property. The manufacturer defined version number for the machine model.";
  sh:name "version";
  sh:datatype xsd:string
], [
  sh:path sdm:machineModelParent;
  sh:or ([
  sh:minLength 1;
  sh:maxLength 256;
  sh:pattern "^[\\w\\-\\.\\{\\}\\$\\+\\*\\[\\]`|~^@!,:\\\\]+$";
  sh:datatype xsd:string;
  sh:description "Property. Identifier format of any NGSI entity"
] [
  sh:datatype xsd:anyURI;
  sh:description "Property. Identifier format of any NGSI entity"
])
], [
  sh:path sdm:machineModelChildren;
  sh:or ([
  sh:minLength 1;
  sh:maxLength 256;
  sh:pattern "^[\\w\\-\\.\\{\\}\\$\\+\\*\\[\\]`|~^@!,:\\\\]+$";
  sh:datatype xsd:string;
  sh:description "Property. Identifier format of any NGSI entity"
] [
  sh:datatype xsd:anyURI;
  sh:description "Property. Identifier format of any NGSI entity"
])
], [
  sh:path sdm:processDescription;
  sh:description "Property. A description of the industrial process carried out by this machine.";
  sh:name "processDescription";
  sh:datatype xsd:string
], [
  sh:path sdm:standardOperations;
  sh:name "standardOperations";
  sh:datatype xsd:string
], [
  sh:path sdm:root;
  sh:description "Property. A logical indicator that this Manufacturing Machine Model is the root of a Machine Model hierarchy.True indicates it is the root, false indicates that it is not the root.";
  sh:name "root";
  sh:datatype xsd:boolean
].
